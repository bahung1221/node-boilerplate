{
  "name": "node-boilerplate",
  "version": "0.0.0",
  "main": "server.js",
  "scripts": {
    "precommit": "lint-staged",
    "run:dev": "cross-env NODE_ENV=development nodemon ./bin/www",
    "run:start": "cross-env NODE_ENV=development pm2 start ecosystem.config.js --no-daemon",
    "run:staging": "cross-env NODE_ENV=staging pm2 start ecosystem.config.js",
    "run:prod": "cross-env NODE_ENV=production pm2 start ecosystem.config.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "debug": "^4.1.1",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "http-errors": "^1.6.2",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "parse-gitignore": "^0.4.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier-standard": "^8.0.1"
  }
}
